---- テストデータ --------
\c          --> true.
\t          --> true.
\\\b        --> true.
\\\n        --> true.
\\\f        --> true.
\\\r        --> true.
\\\"        --> true.
\\\'        --> true.
\\          --> true.
\\\\        --> true.
\\\\\\\t    --> true.

入力無し    --> false.
a           --> false.
\           --> false.
\\t         --> false.
\\\         --> false.
\tttttt     --> false.
\\tab       --> false.
